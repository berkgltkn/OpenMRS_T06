<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="CrossBrowserSuite" parallel="tests" thread-count="2">
    <test name="ChromeTests">
        <parameter name="BrowserType" value="chrome"/>
        <classes>
            <class name="US_406"></class>
            <class name="US_407"></class>
            <class name="US_408"></class>
            <class name="US_409"></class>

        </classes>
    </test>

    <test name="EdgeTests">
        <parameter name="BrowserType" value="edge"/>
        <classes>
            <class name="US_406"></class>
            <class name="US_407"></class>
            <class name="US_408"></class>
            <class name="US_409"></class>
        </classes>
    </test>

    <test name="PatientManagement Test">
        <groups>
            <run>
                <include name="PatientManagement"></include>
            </run>
        </groups>
    </test>
</suite>